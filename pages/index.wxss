/* pages/index.wxss */
@import './animation.wxss';

#music {
  position: fixed;
  z-index: 10;
  right: 70rpx;
  top: 70rpx;
}

#music button {
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: none;
  background-color: transparent;
  z-index: 11;
}

#music button::after {
  border: none;
}

.musicOn,
.musicOff {
  width: 80rpx;
  height: 80rpx;
}

.rotate {
  animation: rotate 3s linear infinite;
}


.bg {
  width: 100%;
  height: 100%;
  position: absolute;
  text-align: center;
  background-position: center center;
  background-repeat: no-repeat;
  background-size: cover;
  background-image: url(https://github.com/799953468/WeChatProject/raw/main/images/bgbg.jpg);
}

.bg-1 {
  display: flex;
  position: relative;
  margin: 0 auto;
  top: 3%;
  height: 94%;
  width: 90%;
  background-image: url(https://github.com/799953468/WeChatProject/raw/main/images/bg.jpg);
  background-repeat: no-repeat;
  background-size: cover;
  animation: zoomIn 1s;
  animation-fill-mode: forwards;
  opacity: 0;
}

.page {
  position: absolute;
  height: 94%;
  width: 90%;
  top: 3%;
  left: 5%;
  overflow: hidden;
  animation: fadeInLeft 2s;
  animation-delay: 1s;
  animation-fill-mode: forwards;
  opacity: 0;
}

.page .left {
  position: absolute;
  width: 30rpx;
  height: 100%;
  left: 0;
  background-image: url(https://github.com/799953468/WeChatProject/raw/main/images/kuang2.jpg);
}

.page .right {
  width: 30rpx;
  height: 100%;
  right: 0;
