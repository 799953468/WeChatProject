  top: 0;
  position: absolute;
  background-image: url(https://github.com/799953468/WeChatProject/raw/main/images/kuangTop.jpg);
}

.page .button {
  height: 30rpx;
  width: 100%;
  bottom: 0;
  position: absolute;
  background-image: url(https://github.com/799953468/WeChatProject/raw/main/images/kuangTop.jpg);
}

.arrow {
  position: absolute;
  z-index: 10;
  bottom: 5%;
  left: 50%;
  margin-left: -50rpx;
  animation: next 1.5s linear infinite;
}

.arrow image {
  width: 100rpx;
