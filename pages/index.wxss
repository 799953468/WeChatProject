/* pages/index.wxss */
#music {
  position: fixed;
  z-index: 10;
  right: 70rpx;
  top: 70rpx;
}

#music button {
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: none;
  background-color: transparent;
  z-index: 11;
}

#music button::after {
  border: none;
}

.musicOn,
.musicOff {
  width: 80rpx;
  height: 80rpx;
}

.rotate {
  animation: rotate 3s linear infinite;
}

@keyframes rotate {
  from {
    transform: rotate(0deg)
  }

  to {
    transform: rotate(359deg)
  }
}

.bg {
  width: 100%;
  height: 100%;
  position: absolute;
  text-align: center;
  background-position: center center;
  background-repeat: no-repeat;
  background-size: cover;
  background-image: url(https://github.com/799953468/WeChatProject/raw/main/images/bgbg.jpg);
}

.bg-1 {
  display: flex;
  position: relative;
  margin: 0 auto;
  top: 3%;
  height: 94%;
  width: 90%;
  background-image: url(https://github.com/799953468/WeChatProject/raw/main/images/bg.jpg);
  background-repeat: no-repeat;
  background-size: cover;
}

.page {
  position: absolute;
  height: 94%;
  width: 90%;
  top: 3%;
  left: 5%;
  overflow: hidden;
}

.page .left {
  position: absolute;
  width: 30rpx;
  height: 100%;
  left: 0;
  background-image: url(https://github.com/799953468/WeChatProject/raw/main/images/kuang2.jpg);
}

.page .right {
  width: 30rpx;
  height: 100%;
  right: 0;
  position: absolute;
  background-image: url(https://github.com/799953468/WeChatProject/raw/main/images/kuang2.jpg);
}

.page .top {
  height: 30rpx;
  width: 100%;
  top: 0;
  position: absolute;
  background-image: url(https://github.com/799953468/WeChatProject/raw/main/images/kuangTop.jpg);
}

.page .button {
  height: 30rpx;
  width: 100%;
  bottom: 0;
  position: absolute;
  background-image: url(https://github.com/799953468/WeChatProject/raw/main/images/kuangTop.jpg);
}

.arrow {
  position: absolute;
  z-index: 10;
  bottom: 5%;
  left: 50%;
  margin-left: -30rpx;
  animation: next 1.5s linear infinite;
}

.arrow image {
  width: 100rpx;
  height: 60rpx;
}

@keyframes next {
  0% {
    transform: translateY(0rpx);
    opacity: 1;
  }

  50% {
    transform: translateY(-25rpx);
    opacity: 0.5;
  }

  100% {
    transform: translateY(-50rpx);
    opacity: 0;
  }
}

