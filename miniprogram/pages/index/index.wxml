<!--pages/index.wxml-->
<view wx:if="{{isHide}}">
    <view wx:if="{{canIUse}}" >
        <view class='header'>
            <image src='/images/wx_login.png'></image>
        </view>
        <view class='content'>
            <view>申请获取以下权限</view>
            <text>获得你的公开信息(昵称，头像等)</text>
        </view>
        <button class='bottom' type='primary' open-type="getUserInfo" lang="zh_CN" bindgetuserinfo="bindGetUserInfo">
            授权登录
        </button>
    </view>
    <view wx:else>请升级微信版本</view>
</view>
<view wx:else>
    <view class="time-container">
        <view class="time-card no-img" wx:for="{{temp}}" wx:key="key">
            <view class="time-card-cotent-box">
                <view class="time-card-top">
                    <view class="time-card-title">
                        <text class="time-card-title-text">{{item.Date}}</text>
                    </view>
                    <view class="time-card-avatar-box">
                        <image src="{{item.user.avatar_large}}" class="time-card-avatar"></image>
                    </view>
                </view>
                <view class="time-card-sub">
                    <countdown time="{{item.time}}"></countdown>
                </view>
            </view>
        </view>
    </view>
</view>
